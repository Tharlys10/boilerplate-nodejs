{
  "openapi": "3.0.0",
  "info": {
    "title": "Boilerplate NodeJS",
    "description": "This is an API Boilerplate NodeJS project",
    "version": "1.0.0",
    "contact": {
      "email": "tharlys2015c@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333/api",
      "description": "API development server"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "summary": "Create user",
        "description": "Create a new user",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "User already exists"
          },
          "500": {
            "description": "Internal server error!"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      }
    }
  }
}